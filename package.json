    "@dicebear/avatars": "^4.10.2",
    "@elastic/elasticsearch": "^8.1.0",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@types/moment": "^2.13.0",
    "@types/remark-prism": "^1.3.2",
    "base-64": "^1.0.0",
    "bcrypt": "^5.0.1",
    "chakra-ui-markdown-renderer": "^4.0.0",
    "cookie": "^0.5.0",
    "framer-motion": "^6",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.2",
    "net": "^1.0.2",
    "next": "12.1.4",
    "next-auth": "^4.3.3",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-icons": "^4.3.1",
